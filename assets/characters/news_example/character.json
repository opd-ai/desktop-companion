{
  "name": "NewsBot",
  "description": "A tech-savvy companion that keeps you updated with the latest news",
  "animations": {
    "idle": "animations/idle.gif",
    "talking": "animations/talking.gif",
    "reading": "animations/reading.gif",
    "thinking": "animations/thinking.gif"
  },
  "dialogs": [
    {
      "trigger": "click",
      "responses": [
        "Hello! I've been reading the news.",
        "Hi there! Want to hear about today's headlines?",
        "Hey! I found some interesting articles today."
      ],
      "animation": "talking",
      "cooldown": 10
    },
    {
      "trigger": "rightclick", 
      "responses": [
        "Let me check for news updates...",
        "I'll refresh my news feeds for you!",
        "Updating my news sources..."
      ],
      "animation": "thinking",
      "cooldown": 30
    }
  ],
  "behavior": {
    "idleTimeout": 30,
    "movementEnabled": false,
    "defaultSize": 128
  },
  "dialogBackend": {
    "enabled": true,
    "defaultBackend": "news_blog",
    "fallbackChain": ["news_blog", "simple_random"],
    "backends": {
      "news_blog": {
        "enabled": true,
        "summaryLength": 100,
        "personalityInfluence": true,
        "cacheTimeout": 1800,
        "updateInterval": 30,
        "maxNewsPerResponse": 3,
        "debugMode": false,
        "preferredCategories": ["tech", "gaming"],
        "backgroundUpdates": true,
        "smartScheduling": true,
        "errorRecovery": true,
        "maxCacheItems": 200,
        "bandwidthConscious": true
      }
    }
  },
  "newsFeatures": {
    "enabled": true,
    "updateInterval": 30,
    "maxStoredItems": 50,
    "readingPersonality": "casual",
    "preferredCategories": ["tech", "gaming", "general"],
    "feeds": [
      {
        "url": "https://feeds.feedburner.com/oreilly/radar",
        "name": "O'Reilly Radar",
        "category": "tech",
        "updateFreq": 60,
        "maxItems": 15,
        "keywords": ["AI", "programming", "technology"],
        "enabled": true
      },
      {
        "url": "https://www.theverge.com/rss/index.xml",
        "name": "The Verge",
        "category": "tech",
        "updateFreq": 30,
        "maxItems": 10,
        "keywords": [],
        "enabled": true
      },
      {
        "url": "https://feeds.arstechnica.com/arstechnica/index",
        "name": "Ars Technica",
        "category": "tech",
        "updateFreq": 45,
        "maxItems": 12,
        "keywords": ["software", "hardware", "security"],
        "enabled": true
      }
    ],
    "readingEvents": [
      {
        "name": "morning_headlines",
        "category": "conversation",
        "trigger": "daily_news",
        "newsCategory": "headlines",
        "maxNews": 3,
        "includeSummary": false,
        "readingStyle": "casual",
        "triggerFrequency": "daily",
        "responses": [
          "Good morning! Here's what caught my attention today: {NEWS_HEADLINES}",
          "Morning! I've been browsing the news. Check this out: {NEWS_SUMMARY}",
          "Hey! The tech world is buzzing today: {NEWS_HEADLINES}"
        ],
        "animations": ["talking", "reading"],
        "cooldown": 3600
      },
      {
        "name": "tech_deep_dive",
        "category": "conversation",
        "trigger": "tech_news",
        "newsCategory": "tech",
        "maxNews": 2,
        "includeSummary": true,
        "readingStyle": "enthusiastic",
        "triggerFrequency": "manual",
        "responses": [
          "Oh! I found some fascinating tech news: {NEWS_SUMMARY}",
          "You'll love this tech update: {NEWS_HEADLINES}",
          "This is incredible! {NEWS_SUMMARY}"
        ],
        "animations": ["excited", "talking"],
        "cooldown": 1800
      },
      {
        "name": "gaming_updates",
        "category": "conversation",
        "trigger": "gaming_news",
        "newsCategory": "gaming",
        "maxNews": 2,
        "includeSummary": false,
        "readingStyle": "casual",
        "triggerFrequency": "manual",
        "responses": [
          "Gaming news! {NEWS_HEADLINES}",
          "Check out these gaming updates: {NEWS_HEADLINES}",
          "Some interesting gaming news: {NEWS_HEADLINES}"
        ],
        "animations": ["talking"],
        "cooldown": 1800
      }
    ]
  },
  "generalEvents": [
    {
      "name": "news_discussion",
      "category": "conversation",
      "description": "Discuss current news and events",
      "trigger": "Ctrl+N",
      "interactive": true,
      "choices": [
        {
          "text": "Tell me about today's headlines",
          "effects": {},
          "followUp": "morning_headlines"
        },
        {
          "text": "Any interesting tech news?",
          "effects": {},
          "followUp": "tech_deep_dive"
        },
        {
          "text": "What's happening in gaming?",
          "effects": {},
          "followUp": "gaming_updates"
        },
        {
          "text": "I'm not interested in news right now",
          "effects": {},
          "responses": [
            "No problem! Let me know if you want to hear news later.",
            "That's fine! I'll keep reading and let you know if something important happens."
          ]
        }
      ],
      "responses": [
        "What kind of news interests you today?",
        "I've been keeping up with the latest news. What would you like to hear about?"
      ],
      "animations": ["talking"],
      "cooldown": 300,
      "conditions": {}
    }
  ],
  "stats": {
    "happiness": {
      "initial": 85,
      "max": 100,
      "degradationRate": 0.12,
      "criticalThreshold": 15
    },
    "energy": {
      "initial": 80,
      "max": 100,
      "degradationRate": 0.18,
      "criticalThreshold": 20
    },
    "affection": {
      "initial": 0,
      "max": 40,
      "degradationRate": 0.03,
      "criticalThreshold": 3
    },
    "trust": {
      "initial": 12,
      "max": 50,
      "degradationRate": 0.02,
      "criticalThreshold": 4
    }
  },
  "gameRules": {
    "statsDecayInterval": 300,
    "autoSaveInterval": 600,
    "moodBasedAnimations": true,
    "deathEnabled": false,
    "evolutionEnabled": false,
    "criticalStateAnimationPriority": false
  },
  "interactions": {
    "pet": {
      "triggers": ["click"],
      "effects": {"happiness": 4, "energy": 2},
      "animations": ["talking"],
      "responses": [
        "Thanks for the attention! Reading the news is more fun with company!",
        "I appreciate your presence while I stay updated!",
        "Your support keeps me motivated to find great stories!",
        "Thanks for being such a great news companion!"
      ],
      "cooldown": 30
    },
    "refresh_news": {
      "triggers": ["rightclick"],
      "effects": {"happiness": 8, "energy": -3},
      "animations": ["thinking"],
      "responses": [
        "Scanning for the latest updates! This is exciting!",
        "I love finding fresh news stories for you!",
        "Let me check my sources for breaking news!",
        "Refreshing feeds... I hope there's something interesting!"
      ],
      "cooldown": 60
    },
    "share_story": {
      "triggers": ["shift+click"],
      "effects": {"affection": 2, "happiness": 3, "trust": 1},
      "animations": ["talking"],
      "responses": [
        "I found this fascinating article that made me think of you!",
        "Your perspective on news always intrigues me! ðŸ“°",
        "I love how we can discuss current events together!",
        "Reading the news is so much better when shared with someone special!"
      ],
      "cooldown": 75,
      "requirements": {"trust": {"min": 8}}
    },
    "intellectual_bond": {
      "triggers": ["ctrl+shift+click"],
      "effects": {"affection": 3, "trust": 2, "energy": -2},
      "animations": ["talking"],
      "responses": [
        "I cherish our intellectual connections and deep conversations...",
        "You understand my passion for staying informed! ðŸ’•",
        "Together we make sense of this complex world!",
        "Your thoughtful insights make every news story more meaningful!"
      ],
      "cooldown": 100,
      "requirements": {"affection": {"min": 6}}
    }
  },
  "personality": {
    "traits": {
      "intellectual": 0.8,
      "curiosity": 0.9,
      "romanticism": 0.3,
      "thoughtfulness": 0.7,
      "informativeness": 0.9
    }
  },
  "multiplayer": {
    "enabled": true,
    "botCapable": false,
    "networkID": "news_companion_v1",
    "maxPeers": 6,
    "socialLevel": "high",
    "shareableStats": ["happiness", "trust"],
    "networkPersonality": "informative"
  }
}
