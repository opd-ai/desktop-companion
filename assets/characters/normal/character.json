      "requirements": {"affection": {"min": 20}}
    },
    "deep_conversation": {
      "triggers": ["ctrl+shift+click"],
      "effects": {"trust": 6, "affection": 4, "intimacy": 4},
      "animations": ["talking"],
      "responses": [
        "I love talking with you about meaningful things.",
        "You really understand me.",
        "These conversations mean a lot to me.",
        "I feel so comfortable sharing with you."
