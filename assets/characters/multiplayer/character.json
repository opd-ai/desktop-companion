  },
  "features": {
    "ai": {
      "enabled": true,
      "dialogBackend": {
        "enabled": true,
        "type": "markov",
        "config": {
          "order": 2,
          "enableLearning": true,
          "personalityWeight": 0.7,
          "contextMemory": 10
        }
      }
    },
    "romance": {
      "enabled": true,
      "maxLevel": 3,
      "personality": {
        "openness": 0.7,
