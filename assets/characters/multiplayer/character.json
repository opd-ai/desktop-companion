        "hunger": 70
      },
      "statDecayRates": {
        "health": 0.1,
        "happiness": 0.2,
        "energy": 0.3,
        "hunger": 0.4
      },
      "interactions": [
        {
          "name": "feed",
          "animation": "happy",
          "effects": {
            "hunger": 20,
            "happiness": 10
          },
          "cooldown": 30
        },
        {
          "name": "play",
          "animation": "happy", 
