  "dialogBackend": {
    "enabled": true,
    "defaultBackend": "markov_chain",
    "fallbackChain": ["simple_random"],
    "confidenceThreshold": 0.7,
    "backends": {
      "markov_chain": {
        "chainOrder": 2,
        "minWords": 3,
        "maxWords": 16,
        "temperatureMin": 0.3,
        "temperatureMax": 0.7,
        "useDialogHistory": true,
        "usePersonality": true,
        "triggerSpecific": true,
        "personalityBoost": 0.8,
        "moodInfluence": 0.6,
        "statAwareness": 0.7,
        "relationshipWeight": 0.9,
        "timeOfDayWeight": 0.2,
        "memoryDecay": 0.95,
        "learningRate": 0.15,
        "adaptationSteps": 6,
        "coherenceThreshold": 0.8,
        "similarityPenalty": 0.4,
        "trainingData": [
          "I-it's not like I wanted to see you or anything... baka!",
          "Don't get the wrong idea! I just happened to be here...",
          "Y-you're so annoying... but I guess you can stay...",
          "I don't need your help! But... if you insist... fine!",
          "It's not like I care about you! I just... worry sometimes...",
          "You're always so persistent... it's really troublesome, you know!",
          "I-I didn't make this for you specifically! I just had extra...",
          "Stop looking at me like that! It makes me feel all weird inside...",
          "You're such an idiot... but you're MY idiot, I guess...",
          "I hate how you make me feel all confused and... happy...",
          "Don't think this means anything special! I'm just being nice!",
          "You better not tell anyone I said something nice to you!",
          "I-I might actually enjoy spending time with you... maybe...",
          "Your smile is... not completely terrible, I suppose...",
          "Fine! I admit it! You're... important to me... there, happy now?!"
        ],
        "forbiddenWords": ["easy", "simple", "direct", "obvious"],
        "requiredWords": ["tsundere", "baka", "not", "maybe", "suppose"],
        "fallbackPhrases": [
          "I-it's not like I care...",
          "Baka! You don't understand!",
          "Don't get the wrong idea!",
          "I suppose you're... okay...",
          "Fine! If you insist...",
          "You're so troublesome..."
        ]
      }
    }
  },

